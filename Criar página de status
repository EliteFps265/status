<script>
async function check(id, url) {
  try {
    await fetch(url, { mode: "no-cors" });
    document.getElementById(id).innerHTML = "Online";
    document.getElementById(id).className = "online";
  } catch {
    document.getElementById(id).innerHTML = "Offline";
    document.getElementById(id).className = "offline";
  }
}

check("site", "https://google.com");
check("api", "https://api.github.com");
</script>

